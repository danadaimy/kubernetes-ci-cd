def yamlFile = readFile('manifests/jenkins/pod-template.yaml') 
podTemplate(yaml: """yamlFile""" {
 node(POD_LABEL) {
    stage('Run kubectl') {
      container('kubectl') {
        sh "kubectl get pods"
      }
    }
    stage('Run helm') {
      container('helm') {
        sh "helm list"
      }
    }
  }
}
