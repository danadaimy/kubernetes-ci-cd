pipeline {
  agent {
    kubernetes {
      yamlFile 'manifests/jenkins/pod-template.yaml'   
    }
  }
  stages {
    stage('Initialize Environment') {
      steps {
        script {
          env.TEMPLATE = readFile 'manifests/jenkins/pod-template.yaml'
        } 
      }
    }
    stage('Run kubectl') {
      steps {
        container('kubectl') {
          sh "echo testing testing testing"
          sh "kubectl get pods"
          sh "echo ${env.TEMPLATE}"
        }
      }
    }
    stage('Run helm') {
      steps {
        container('helm') {
          sh "helm list"
        }
      }
    }
  }
}

